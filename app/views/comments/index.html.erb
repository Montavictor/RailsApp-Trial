<%= render "articles/title" %>
<%= render "articles/article", article: @article %>

 
<% @comments.each do |comment| %>
  <div class="comment-box">
    <<span class="commenter"><%= comment.commenter %> <%= comment_time(comment.created_at) %>  ago</span>  
    <div class="comment-body"><%= comment.body %></div>
    <div class="comment-link">
    <%= link_to "Manage this Comment", edit_article_comment_path(@article, comment) %> 
    <%= link_to "Show", article_comment_path(@article, comment) %> 
    <%= link_to "Delete", article_comment_path(@article, comment), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
    </div>
    <br>
    </div>

<% end %>

 
<%= render "comments/form", article: @article %>